<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.STV"
       name="[COLOR yellow]Stv[/COLOR]"
       version="3.0.0"
       provider-name="STV">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.liveresolver" version="0.1.24" optional="true"/>
    <import addon="script.module.youtube.dl" optional="true"/>
    <import addon="plugin.video.youtube" optional="true" />
    <import addon="script.module.urlresolver" optional="true"/>
    <import addon="script.module.simplejson" />
     <import addon="script.module.livestreamer" optional="true"/>
     <import addon="script.module.pyamf" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Creado por STV</summary>
    <description></description>
    <platform>all</platform>
  </extension>
</addon>


<addon id="repository.stvrepo" name="Repositorio STV" version="1.1.0" provider-name="STV">
	<extension point="xbmc.addon.repository" name="Repositorio STV">
		<info compressed="false">https://raw.githubusercontent.com/stvadd/stvrepo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/stvadd/stvrepo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/stvadd/stvrepo/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Repositorio STV</summary>
   		<description lang="en">Instala todos los addons para STV.</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
